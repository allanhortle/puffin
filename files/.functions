# 
# FZF Helpers
#

unalias z 2> /dev/null
z() {
  [ $# -gt 0  ] && fasd_cd -d "$*" && return
    cd "$(fasd_cd -d 2>&1 | fzf --height 40% --reverse --inline-info +s --tac --query "$*" | sed 's/^[0-9,.]* *//')"

}

