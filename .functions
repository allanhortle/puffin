function weather() {
    ansiweather -a false -u metric -l ${PUFFIN_WEATHER_LOCATION:-"Melbourne,AU"}  | cut -f1 -d "-" | sed 's/^.*=> //g' | sed 's/ //' | sed 's/ . //'
}

